[Unit]
Description=LinkedIn Bot - Database Backup (Daily)
Documentation=https://github.com/GaspardD78/linkedin-birthday-auto
After=linkedin-bot.service

[Service]
Type=oneshot

# Chemin du projet
WorkingDirectory=/home/pi/linkedin-birthday-auto

# Script de backup
ExecStart=/home/pi/linkedin-birthday-auto/scripts/backup_database.sh

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=linkedin-bot-backup

[Install]
WantedBy=multi-user.target
