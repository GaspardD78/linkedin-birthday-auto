[Unit]
Description=LinkedIn Automation Dashboard
After=network.target

[Service]
User=pi
WorkingDirectory=/home/pi/linkedin-birthday-auto
ExecStart=/home/pi/linkedin-birthday-auto/venv/bin/gunicorn -w 4 -b 0.0.0.0:5000 dashboard_app:app
Restart=always
Environment="PATH=/home/pi/linkedin-birthday-auto/venv/bin"
Environment="DATABASE_PATH=/home/pi/linkedin-birthday-auto/linkedin_automation.db"
Environment="FLASK_SECRET_KEY=change-this-secret-key-in-production"
Environment="ADMIN_PASSWORD=admin"

[Install]
WantedBy=multi-user.target
